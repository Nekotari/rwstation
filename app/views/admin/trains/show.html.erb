<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<strong>Вагоны:</strong>
    <% @train.cars.each do |car| %>
        <li><%= link_to "Вагон №#{car.number}", car %></li>
    <% end %>

<% if @train.route.nil? %>
    <p> Маршрут не назначен</p>
<% else %>
    <ul>
      <%= @train.route.name %>
      <% @train.route.railway_stations.each do |station| %>
          <li><%= station.title %></li>
      <% end %>
    </ul>
<% end %>

<p>
  <%= link_to 'Добавить вагон', new_train_car_path(@train) %>
</p>

<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
